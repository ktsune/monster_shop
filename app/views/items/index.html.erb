<% if @merchant %>
  <h1>All Items From <%= link_to @merchant.name, merchant_dashboard_path %></h1>
  <%= link_to 'New Item', new_item_path %>
<% else %>
  <h1>All Items</h1>
<% end %>

<% @items.each do |item| %>
  <section id='item-<%= item.id%>'>
    <h2><%= link_to item.name, "/items/#{item.id}" %></h2>
    <p><%= item.description %></p>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTaLM_vbg2Rh-mZ-B4t-RSU9AmSfEEq_SN9xPP_qrA2I6Ftq_D9Qw">
    <p>Price: <%= number_to_currency(item.price) %></p>
    <p>Sold by: <%= link_to item.merchant.name, "/merchants/#{item.merchant_id}" %>, Inventory: <%= item.inventory %></p>
    <p><%= item.active ? "Active" : "Inactive" %></p>
  </section>
<% end %>

<% unless @merchant %>
  <section id='top-five'>
    <h2>Most Popular Items:</h2>
    <% @top_items.each do |item| %>
     <h3>Item: <%= item.name %></h3>
     <h4>Quantity Ordered: <%= item.quantity %></h4>
    <% end %>
  </section>

  <section id='bottom-five'>
    <h2>Least Popular Items:</h2>
    <% @bottom_items.each do |item| %>
     <h3>Item: <%= item.name %></h3>
     <h4>Quantity Ordered: <%= item.quantity %></h4>
    <% end %>
  </section>
<% end %>
