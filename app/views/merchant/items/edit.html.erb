<h2>Edit Item</h2>

<%= form_for @item, url: update_item_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :inventory %>
  <%= f.text_field :inventory %>

  <%= f.submit 'Update Item' %>
<% end %>
