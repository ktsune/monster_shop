<% unless @password %>
  <h2>Edit Profile</h2>

  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zip %>
    <%= f.text_field :zip %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :confirm_password %>
    <%= f.password_field :confirm_password %>

    <%= f.submit 'Update Profile' %>
  <% end %>
<% else %>
  <%= form_tag "/users/#{@user.id}", method: :patch do %>

  <%= label_tag :current_password, 'Current Password' %>
  <%= password_field_tag :current_password %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= label_tag :confirm_password, 'Confirm Password' %>
  <%= password_field_tag :confirm_password %>

  <%= submit_tag 'Change Password' %>
  <% end %>
<% end %>
