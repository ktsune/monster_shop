<h2>Profile</h2>

<section id="user-<%= @user.id %>">
  <p> Name: <%= @user.name %> </p>
  <p> Email: <%= @user.email %> </p>
  <p> Address: <%= @user.address %> </p>
  <p> City: <%= @user.city %> </p>
  <p> State: <%= @user.state %> </p>
  <p> Zip: <%= @user.zip %> </p>
</section>

<% if @user.orders != nil %>
  <%= link_to "My Orders", profile_orders_path %>
<% end %>
